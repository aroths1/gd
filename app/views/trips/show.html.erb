
<h2>Trip Information for Participants</h2>
<p>
  <b>Group:</b>
  <%= @trip.group %>
</p>

<p>
  <b> Activity:</b>
  <%= @trip.destination_specific_activity %>
</p>

<p>
  <b>Date:</b>
  <%= @trip.date %>
</p>

<p>
	<b>Destination:</b>
	<%= @trip.destination_specific_activity.destination.name %>
</p>

<p>
  <b>Leader:</b>
  <%= @trip.leader %>
</p>

<h2>Prices</h2>
<ul>
	<% @trip.destination_specific_activity.items.each do |item| %>
		<li><%= item. name + ': ' + number_to_currency(item.price) %></li>
	<% end %>
</ul>
<p>
	
<% if ! current_user.nil? && current_user.is_trip_leader?(@trip) %>
	<%= render partial: 'leader'%>
<% end %>
<% if (! current_user.nil? && ! @trip.user_registered?(current_user)) || ! user_signed_in? %>
<%= link_to 'Click here to register for this trip.', new_order_path(@trip.id) %>
<%# I created a custom named route to be able to include the trip_id in the url. This is not OOB functionality. %>

<% else %>
	<%= link_to 'Click here to modify your registration for this trip.', edit_order_path(@order.id) %>
<% end %>
</p>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
