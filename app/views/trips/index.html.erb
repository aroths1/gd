<h1>Listing trips</h1>

<table>
  <tr>
    <th>Group</th>
    <th>Destination</th>
    <th>Activity</th>
    <th>Date</th>
    <th>Leader</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.group %></td>
    <td><%= trip.destination_specific_activity.destination.name %></td>
    <td><%= trip.destination_specific_activity.activity.name %></td>
    <td><%= trip.date %></td>
    <td><%= trip.leader %></td>
    
    <td><%= link_to 'Show', trip %></td>
	<% if current_user.is_trip_leader?(trip) %>    
    	<td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    	<td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

